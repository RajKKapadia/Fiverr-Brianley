# Twilio Configuration
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here

# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash

# Google Conversational Agent (Dialogflow CX)
GCA_PROJECT_ID=your_gcp_project_id
GCA_LOCATION=us-central1
GCA_AGENT_ID=your_agent_id

# Google Cloud Service Account (JSON as single-line string)
GCP_SA_JSON={"type":"service_account","project_id":"...","private_key":"..."}

# Phone Numbers (E.164 format)
CALLER_ID_E164=+1234567890
CAREGIVER_E164=+1987654321

# Optional: Public URL for webhook validation
# PUBLIC_URL=https://your-domain.com

# Optional: Maximum image size in MB (default: 10)
# MAX_IMAGE_SIZE_MB=10
